<?xml version="1.0" encoding="UTF-8" ?>

<?import javafx.geometry.Insets ?>
<?import javafx.scene.control.Button ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.TextField ?>
<?import javafx.scene.layout.AnchorPane ?>
<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.text.Font ?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizapp.ui.SignupController">
    <children>
        <VBox alignment="TOP_CENTER" layoutY="56.0" prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label text="Sign up">
                    <font>
                        <Font size="61.0" />
                    </font>
                </Label>
                <Label text="Username:">
                    <VBox.margin>
                        <Insets bottom="10.0" top="40.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="username" maxWidth="200.0" minWidth="100.0" prefWidth="100.0">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Password:">
                    <VBox.margin>
                        <Insets bottom="10.0" top="15.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="password" maxWidth="200.0" minWidth="200.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>
                <Button fx:id="signupButton" mnemonicParsing="false" onAction="#toMainMenu" prefHeight="27.0" prefWidth="80.0" text="Sign up">
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#toLogin" prefHeight="27.0" prefWidth="80.0" text="log in">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Button>
                <Label fx:id="errorMessage" />
            </children>
        </VBox>
    </children>
</AnchorPane>